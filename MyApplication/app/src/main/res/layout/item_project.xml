<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/projectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Name"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/projectStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: ACTIVE"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/projectTargetAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target: $1000"
        android:textSize="14sp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/projectReceivedAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Received: $500"
        android:textSize="14sp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/projectCreatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created: 2025-01-01"
        android:textSize="12sp"
        android:layout_marginTop="2dp"/>

</LinearLayout> 