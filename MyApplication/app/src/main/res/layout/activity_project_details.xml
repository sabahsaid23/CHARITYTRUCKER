<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detailsProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/detailsProjectDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/detailsProjectTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target: $0.0"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/detailsProjectStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: N/A"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/detailsProjectReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Received: $0.0"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/detailsProjectCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created: N/A"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

    </LinearLayout>
</ScrollView> 